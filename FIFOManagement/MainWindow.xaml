<Window x:Class="FIFOManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FIFOManagement.ViewModels"
        Title="Predictive FIFO Storage Manager" Height="820" Width="1050"
        WindowStartupLocation="CenterScreen" Background="#1e1e2e">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#2a2a3d"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style x:Key="AccentBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#a0a0b8"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e0e0ff"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="SmallInput" TargetType="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#363650"/>
            <Setter Property="Foreground" Value="#e0e0ff"/>
            <Setter Property="BorderBrush" Value="#4a4a6a"/>
            <Setter Property="Padding" Value="4,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}" Background="#3b3b5c" Margin="4,4,4,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Predictive FIFO Storage Manager" FontSize="20" FontWeight="Bold" Foreground="#e0e0ff"/>
                    <TextBlock Foreground="#8888aa" FontSize="11" Margin="0,2,0,0">
                        <Run Text="C++ Native Engine â€” Scan Â· Forecast Â· Cleanup"/>
                        <Run Text="  |  Days in DB:" Foreground="#a29bfe"/>
                        <Run Text="{Binding DayCounter, Mode=OneWay}" Foreground="#55efc4" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
                <Button Grid.Column="1" Content="Initialize Engine" Command="{Binding InitializeCommand}"
                        Background="#6c5ce7" Style="{StaticResource AccentBtn}"/>
            </Grid>
        </Border>

        <!-- Config Panel -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Root Path -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,6">
                    <TextBlock Text="ROOT PATH" Style="{StaticResource LabelText}" Margin="0,0,0,3"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding RootPath, UpdateSourceTrigger=PropertyChanged}" FontSize="12"
                                 Background="#363650" Foreground="#e0e0ff" BorderBrush="#4a4a6a" Padding="6,4"/>
                        <Button Grid.Column="1" Content="..." Command="{Binding BrowsePathCommand}"
                                Background="#4a4a6a" Foreground="White" Padding="8,4" Margin="4,0,0,0"
                                BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
                    </Grid>
                </StackPanel>

                <!-- Limit -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,6" Width="70">
                    <TextBlock Text="LIMIT (GB)" Style="{StaticResource LabelText}" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding StorageLimitGB}" Style="{StaticResource SmallInput}"/>
                </StackPanel>

                <!-- Granularity -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,8,6" Width="130">
                    <TextBlock Text="GRANULARITY" Style="{StaticResource LabelText}" Margin="0,0,0,3"/>
                    <ComboBox SelectedIndex="{Binding Granularity}" FontSize="12"
                              Background="#363650" Foreground="#e0e0ff" Padding="6,4">
                        <ComboBoxItem Content="Asset"/>
                        <ComboBoxItem Content="Asset + Index"/>
                        <ComboBoxItem Content="Asset+Idx+E/F"/>
                    </ComboBox>
                </StackPanel>

                <!-- Schedule: Daily -->
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,8,6" Width="75">
                    <TextBlock Text="DAILY AT" Style="{StaticResource LabelText}" Margin="0,0,0,3"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding ScheduleHour}" Width="28" Style="{StaticResource SmallInput}"/>
                        <TextBlock Text=":" Foreground="#e0e0ff" FontSize="12" VerticalAlignment="Center" Margin="2,0"/>
                        <TextBox Text="{Binding ScheduleMinute}" Width="28" Style="{StaticResource SmallInput}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Schedule: Interval -->
                <StackPanel Grid.Row="0" Grid.Column="4" Width="80">
                    <TextBlock Text="INTERVAL (m)" Style="{StaticResource LabelText}" Margin="0,0,0,3"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding IntervalMinutes}" Width="40" Style="{StaticResource SmallInput}"/>
                        <CheckBox IsChecked="{Binding UseIntervalMode}" VerticalAlignment="Center" Margin="6,0,0,0"
                                  ToolTip="Use interval mode instead of daily" Foreground="#a0a0b8"/>
                    </StackPanel>
                </StackPanel>

                <!-- Row 1: Test data configs -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="14-Day Size (GB):" Style="{StaticResource LabelText}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Text="{Binding TestDataSizeGB}" Width="44" Style="{StaticResource SmallInput}"/>
                    <TextBlock Text="    1-Day Size (MB):" Style="{StaticResource LabelText}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Text="{Binding OneDaySizeMB}" Width="50" Style="{StaticResource SmallInput}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Control Buttons -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="âš¡ Execute Now" Command="{Binding ExecuteNowCommand}"
                        Background="#00b894" Style="{StaticResource AccentBtn}" Margin="3"/>
                <Button Content="ðŸ§ª Generate 14 Days" Command="{Binding GenerateTestDataCommand}"
                        Background="#fdcb6e" Foreground="#2d3436" Style="{StaticResource AccentBtn}" Margin="3"/>
                <Button Content="ðŸ“† Generate 1 Day" Command="{Binding GenerateOneDayCommand}"
                        Background="#e17055" Style="{StaticResource AccentBtn}" Margin="3"/>
                <Button Command="{Binding ToggleScheduleCommand}" Background="#0984e3"
                        Style="{StaticResource AccentBtn}" Margin="3"
                        Content="ðŸ“… Start Schedule"/>
                <Button Content="ðŸ”„ Refresh Weights" Command="{Binding RefreshWeightsCommand}"
                        Background="#636e72" Style="{StaticResource AccentBtn}" Margin="3"/>
            </StackPanel>
        </Border>

        <!-- Dashboard Cards -->
        <Grid Grid.Row="3" Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="CURRENT STORAGE" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding CurrentStorageMB, StringFormat={}{0:F1} MB}" Style="{StaticResource ValueText}"/>
                    <TextBlock Text="{Binding UsagePct, StringFormat={}{0:F1}% used}" Foreground="#ffeaa7" FontSize="11"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="FORECAST TOMORROW" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding ForecastMB, StringFormat={}{0:F1} MB}" Style="{StaticResource ValueText}"/>
                    <TextBlock Text="{Binding GrowthRateMB, StringFormat=Growth: {0:+0.0;-0.0} MB/day}" Foreground="#74b9ff" FontSize="11"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="STATUS" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding ActionLabel}" Style="{StaticResource ValueText}"/>
                    <TextBlock Text="{Binding HistoryDays, StringFormat={}{0} days of history}" Foreground="#a29bfe" FontSize="11"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="LAST CLEANUP" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding LastFilesDeleted, StringFormat={}{0} files}" Style="{StaticResource ValueText}"/>
                    <TextBlock Text="{Binding LastMBFreed, StringFormat={}{0:F1} MB freed}" Foreground="#55efc4" FontSize="11"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Average Weights Table + Run Info -->
        <Grid Grid.Row="4" Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <!-- Weights Table -->
            <Border Grid.Column="0" Style="{StaticResource CardBorder}" Padding="10">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="AVERAGE WEIGHTS (14 DAYS)" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                    <DataGrid ItemsSource="{Binding Weights}" AutoGenerateColumns="False" IsReadOnly="True"
                              CanUserAddRows="False" Background="#2a2a3d" Foreground="#dfe6e9"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#3b3b5c"
                              BorderThickness="0" RowBackground="#2a2a3d" AlternatingRowBackground="#323248"
                              HeadersVisibility="Column" FontSize="12" ColumnHeaderHeight="28" RowHeight="24">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#3b3b5c"/>
                                <Setter Property="Foreground" Value="#a0a0b8"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Asset" Binding="{Binding Asset}" Width="100"/>
                            <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="50"/>
                            <DataGridTextColumn Header="E/F" Binding="{Binding Category}" Width="40"/>
                            <DataGridTextColumn Header="Avg MB/day" Binding="{Binding AvgMB, StringFormat=F2}" Width="90"/>
                            <DataGridTextColumn Header="Total MB" Binding="{Binding TotalMB, StringFormat=F1}" Width="80"/>
                            <DataGridTextColumn Header="Days" Binding="{Binding Days}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Right panel: Run info + Progress -->
            <StackPanel Grid.Column="1">
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="SCHEDULE INFO" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                        <TextBlock Foreground="#dfe6e9" FontSize="12" TextWrapping="Wrap">
                            <Run Text="Last Run:" Foreground="#a0a0b8"/>
                            <LineBreak/>
                            <Run Text="{Binding LastRun, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Foreground="#dfe6e9" FontSize="12" Margin="0,6,0,0" TextWrapping="Wrap">
                            <Run Text="Next Run:" Foreground="#a0a0b8"/>
                            <LineBreak/>
                            <Run Text="{Binding NextRun, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="PROGRESS" Style="{StaticResource LabelText}" Margin="0,0,0,6"/>
                        <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="18"
                                     Background="#363650" Foreground="#6c5ce7"/>
                        <TextBlock Text="{Binding ProgressPercent, StringFormat={}{0}%}" Foreground="#a0a0b8"
                                   FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="5" Background="#16162a" CornerRadius="6" Padding="10,6" Margin="4,4,4,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#b0b0cc" FontSize="11" FontFamily="Consolas" TextTrimming="CharacterEllipsis"/>
        </Border>
    </Grid>
</Window>
